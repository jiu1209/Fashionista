<div class="indextot">
  <div class= "container">
	<div class="row">	
		<div class="col-xs-3">

			 <%= render 'layouts/styling' %> 

		</div>
	      <div class="col-xs-9">
           <div align="right"><%= render 'layouts/search' %></div>
	      	<h2>Men's Styling</h2>
	      	  <%  @styilings.each do |styiling| %>
               <div class="userbox">
                <table>
              	  <tr>
                    <td><%= link_to attachment_image_tag(styiling, :styling_image, format: "jpeg", size: "250x330"), styiling_path(styiling.id) %>
                      <div align="center"><%= styiling.created_at.strftime('%Y/%m/%d')%>ã€€
                        
                      <% if styiling.favorited_by?(current_user) %>
                       <%= link_to styiling_favorites_path(styiling.id), method: :delete do %>
                       <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                       <%= styiling.favorites.count %> | <i class="fas fa-comment-alt"></i> <%= link_to "#{styiling.styiling_comments.count}", styiling_path(styiling.id) %>
                    <% end %>
                  <% else %>
                      <%= link_to styiling_favorites_path(styiling.id), method: :post do %>
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= styiling.favorites.count %> | <i class="fas fa-comment-alt"></i> <%= link_to "#{styiling.styiling_comments.count}", styiling_path(styiling.id) %></td>
                 <% end %>
               <% end %></td></div>
                  </tr>
                  <tr>
                    <td><%= link_to attachment_image_tag(styiling.user, :image, format: "jpeg", size: "30x30"),user_path(  styiling.user.id) %>
                        <%= link_to styiling.user.name, user_path(styiling.user.id) %> | <%= styiling.user.height %></td>
                  </tr>
                </table>
              </div>
           <% end %>
          <div align="right"><%= paginate @styilings %></div>      
        </div>
     </div>
  </div>
</div>