     <% end %>
     </ul>
   </div>
  </nav>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <script src="https://kit.fontawesome.com/f4a34d9917.js" crossorigin="anonymous"></script>

     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<div class="indextot">
  <div class= "container">
	<div class="row">	
		<div class="col-xs-3">

			 <%= render 'layouts/styling_info' %> 

		</div>
	      <div class="col-xs-9">
	      	<h2>Men's Ranking</h2>
	      	  <% @gender_ranks.each.with_index(1) do |styiling, i| %>
               <div class="userbox">
                <table>
              	  <tr>
                    <td><%= link_to attachment_image_tag(styiling, :styling_image, format: "jpeg", size: "250x330"), styiling_path(styiling.id) %>
                   <tr>
                  	<td><i class="fas fa-chess-queen"></i> 第<%= i %>位</td>
                  </tr>
                  </tr>
                  <tr>
                    <td><%= link_to attachment_image_tag(styiling.user, :image, format: "jpeg", size: "30x30"),user_path(  styiling.user.id) %>
                        <%= link_to styiling.user.name, user_path(styiling.user.id) %> | <%= styiling.user.height %></td>
                  </tr>
                </table>
              </div>
           <% end %>
        </div>
     </div>
  </div>
</div>