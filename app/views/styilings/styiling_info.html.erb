        <div class="col-xs-6">
        <p style="color: green;"><%= flash[:complete] %></p>
          <table>
            <tr>
              <th><%= link_to attachment_image_tag(@user, :image, format: "jpeg", fallback:"no_image.jpg", size: "100x100"),show_info_path(@user.id)%></th>
