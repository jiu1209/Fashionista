            </br>
          <div class="col-xs-12">
            <h2>Styling Details</h2>
              <div class="col-xs-5">
                <tr>
                  <th><%= attachment_image_tag @styiling, :styling_image, format: "jpeg", size: "450x580" %></th>
                </tr>
                <tr>
                    <td>
                      <div align="left"><%= @styiling.created_at.strftime('%Y/%m/%d')%></div></td>
                  </tr>
