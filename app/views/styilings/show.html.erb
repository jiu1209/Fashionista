<div class="indextot">
  <div class= "container">
	  <div class="row">	
      <div class="col-xs-12">
        <div class="col-xs-6">
        <p style="color: green;"><%= flash[:complete] %></p>
          <table>
             <tr>
              <th><%= link_to attachment_image_tag(@user, :image, format: "jpeg", fallback:"no_image.jpg", size: "100x100"),user_path(@user.id), data: {"turbolinks" => false}%></th>
              <td><h4><%=  @user.name %></h4><%= @user.height %>cm | <%= @user.gender %> | <%= @user.favorite_brand %></td>
            </tr>
            <tr>
             <% if current_user.following?(@user) %>
                 <div align="left"><th><%= link_to 'フォロー外す', unfollow_path(@user.id), data: {"turbolinks" => false}, class: 'btn btn-primary btn-sm ', method: :POST %></th></div>
              <% else %>
                 <div align="left"><th><%= link_to 'フォローする', follow_path(@user.id), data: {"turbolinks" => false}, class: 'btn btn-primary  btn-sm  ', method: :POST %></th></div>
              <% end %>
            </tr>
            <tr>
              <div align="left"><td>フォロー : <%= link_to @user.follower.count,  user_follows_path(@user.id), data: {"turbolinks" => false} %></td>
                 <td>フォロワー : <%= link_to @user.followed.count,  user_followers_path(@user.id), data: {"turbolinks" => false} %></td></div>
            </tr>
          </table>
        </div>
        <div align="right"><%= render 'layouts/search' %></div>
          <div class="col-xs-6">
            <th><h2>Point's</h2></th>
              <td><%= @styiling.detail %></td>
            </br>
            </br>
            </br>
          <% if user_signed_in? && current_user.id == @user.id %>
            <tr> 
              <th><%= link_to "スタイリングを編集する", edit_styiling_path, data: {"turbolinks" => false}, class: "btn btn-success ", role: "botton" %></th>
            </tr>
          <% end %>
            </br> 
            </br>
          </div>
        </div>
          <div class="col-xs-12">
            <h2>Styling Details</h2>
              <div class="col-xs-5">
                <tr>
                  <th><%= attachment_image_tag @styiling, :styling_image, format: "jpeg", size: "450x580" %></th>
                </tr>
                <tr>
                    <td>
                      <div align="left"><%= @styiling.created_at.strftime('%Y/%m/%d')%>　
                      <% if @styiling.favorited_by?(current_user) %>
                       <%= link_to styiling_favorites_path(@styiling.id), data: {"turbolinks" => false}, method: :delete do %>
                       <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                       <%= @styiling.favorites.count %> | <i class="fas fa-comment-alt"></i> <%= link_to "#{@styiling.styiling_comments.count}", styiling_path(@styiling.id), data: {"turbolinks" => false} %>
                    <% end %>
                  <% else %>
                      <%= link_to styiling_favorites_path(@styiling.id), method: :post do %>
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= @styiling.favorites.count %> | <i class="fas fa-comment-alt"></i> <%= link_to "#{@styiling.styiling_comments.count}", styiling_path(@styiling.id), data: {"turbolinks" => false} %>
                 <% end %>
                <% end %></div></td>
                  </tr>
               <% @styiling.styiling_comments.each do |styiling_comment| %>
               <table>
                 <tr>
                   <td><%= styiling_comment.user.name %> | <%= styiling_comment.created_at.strftime('%Y/%m/%d') %> 　　 <%= styiling_comment.comment %></td>
                   <% if styiling_comment.user == current_user%>
                   <td><%= link_to "削除", styiling_styiling_comment_path(styiling_comment.styiling, styiling_comment), data: {"turbolinks" => false}, method: :delete, class: "btn btn-danger btn-xs" %></td>
                   <% end %>
                 </tr>
                </table>
               <% end %>
               <%= form_for [@styiling,@styiling_comment] do |f| %>
                   <div class="row">
                     <div class="col-sm-12">
                       <%= f.text_area :comment, rows:'4', class: "form-control",placeholder: "コメント欄です" %>
                     </div>
                   </div>
                 </br>
                   <%= f.submit "送信する", class: "btn btn-base-1 mt-20 pull-right btn-success" %>
                <% end %>
              </div>
              <div class="col-xs-7">
                <h2>Item's</h2>
                  <table>
                    <tr>
                      <td><%= @styiling.item_one %></td><td><%= @styiling.brand_one %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_two %></td><td><%= @styiling.brand_two %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_three %></td><td><%= @styiling.brand_three %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_four %></td><td><%= @styiling.brand_four %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_five %></td><td><%= @styiling.brand_five %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_six %></td><td><%= @styiling.brand_six %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_seven %></td><td><%= @styiling.brand_seven %></td>
                    </tr>
                    <tr>
                      <td><%= @styiling.item_eight %></td><td><%= @styiling.brand_eight %></td>
                    </tr>
                  </table>  
              </div>
          </div>
      </div>
  </div>
</div>