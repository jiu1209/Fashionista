<div class="indextot">
  <div class= "container">
	<div class="row">	
		<div class="col-xs-3">

			 <%= render 'layouts/styling' %> 

		</div>
	      <div class="col-xs-9">
           <div align="right"><%= render 'layouts/search' %></div>
	      	<h2>Ranking All </h2>
	      	  <% @all_ranks.each.with_index(1) do |styiling, i| %>
               <div class="userbox">
                <table>
              	  <tr>
                    <td><%= link_to attachment_image_tag(styiling, :styling_image, format: "jpeg", size: "250x330"), styiling_path(styiling.id) %>
                   <tr>
                  	<td><i class="fas fa-chess-queen"></i> 第<%= i %>位</td>
                  </tr>
                  </tr>
                  <tr>
                    <td><%= link_to attachment_image_tag(styiling.user, :image, format: "jpeg", size: "30x30"),user_path(  styiling.user.id) %>
                        <%= link_to styiling.user.name, user_path(styiling.user.id) %> | <%= styiling.user.height %></td>
                  </tr>
                </table>
              </div>
           <% end %>
        </div>
     </div>
  </div>
</div>