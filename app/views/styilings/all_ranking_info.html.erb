<div class="indextot">
  <div class= "container">
	  <div class="row">	
		  <div class="col-xs-3">

			 <%= render 'layouts/styling_info' %> 

		  </div>
	      <div class="col-xs-9">
	      	<h2>Ranking All </h2>
	      	  <% @all_ranks.each.with_index(1) do |styiling, i| %>
               <div class="userbox">
                 <table>
              	   <tr>
                     <td><%= link_to attachment_image_tag(styiling, :styling_image, format: "jpeg", size: "250x330"), styiling_info_path(styiling.id), data: {"turbolinks" => false} %>
                     <tr>
                       <td><i class="fas fa-chess-queen"></i> 第<%= i %>位</td>
                     </tr>
                   </tr>
                   <tr>
                     <td><%= link_to attachment_image_tag(styiling.user, :image, format: "jpeg",fallback:"no_image.jpg", size: "30x30"),show_info_path(styiling.user.id), data: {"turbolinks" => false} %>
                        <%= link_to styiling.user.name, show_info_path(styiling.user.id), data: {"turbolinks" => false} %> | <%= styiling.user.height %>cm</td>
                   </tr>
                 </table>
               </div>
            <% end %>
        </div>
     </div>
  </div>
</div>