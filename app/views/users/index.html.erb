<div class="indextot">
  <div class= "container">
	<div class="row">	
		<div class="col-xs-3">

			 <%= render 'layouts/styling' %> 

		</div>
	      <div class="col-xs-9">
	      	<h2>User's All</h2>
	      	  <% @users.each do |user| %>
               <div class="userbox">
                <table>
              	  <tr>
                    <td><%= attachment_image_tag user, :image, format: "jpeg", fallback:"no_image.jpg", size: "200x200" %></td>
                  </tr>
                  <tr>
                    <td><%= link_to user.name, user_path(user.id) %></td>
                  </tr>
                  <tr>
                    <td><%= user.height %> | <%= user.gender %> | <%= user.favorite_brand %></td>
                  </tr>
                </table>
              </div>
              <% end %>
