<div class="indextot">
  <div class= "container">
	  <div class="row">	
		  <div class="col-xs-12">
        <h1>User Details</h1>
          <div class="col-xs-3">
            <tr>
              <td><%= attachment_image_tag @user, :image, format: "jpeg", fallback:"no_image.jpg", size: "250x250" %></td>
          </div>
          <div class="col-xs-5">
            <h2><%= @user.name %></h2>
            <td><%= @user.height %> | <%= @user.gender %> | <%= @user.favorite_brand %></td>
            </tr>
            </br>
            </br>
            <tr>
	            <td><%= @user.introduction %></td>
            </tr>
            </br> 
            </br> 
            </br> 
            </br> 
             <% if user_signed_in? && current_user.id == @user.id %>
            <tr> 
              <th><%= link_to "編集ページへ", edit_user_path, class: "btn btn-primary btn-md", role: "botton" %></th>
              <td><%= link_to "スタイリングを投稿する", new_styiling_path, class: "btn btn-success btn-md", role: "botton" %></td>
            </tr>
            <% end %> 
  　　　   </div>
          <div class="col-xs-12">
            </br> 
            </br>
            <h3><%= @user.name %>さんのスタイリング</h3>
            <% @styilings.each do |styiling| %>
               <div class="userbox">
                <table>
                   <tr>
                    <td><%= link_to attachment_image_tag(styiling, :styling_image, format: "jpeg", size: "250x300"),styiling_path(styiling.id) %></td>
                  </tr>
                  <tr>
                    <% if styiling.favorited_by?(current_user) %>
                    <td>
                       <%= link_to styiling_favorites_path(styiling.id), method: :delete do %>
                       <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                       <%= styiling.favorites.count %> | <i class="fas fa-comment-alt"></i> <%= link_to "#{styiling.styiling_comments.count}", styiling_path(styiling.id) %>
                    </td>
                    <% end %>
                    <% else %>
                    <td>
                      <%= link_to styiling_favorites_path(styiling.id), method: :post do %>
                      <i class="fa fa-heart" aria-hidden="true"></i>
                      <%= styiling.favorites.count %> | <i class="fas fa-comment-alt"></i> <%= link_to "#{styiling.styiling_comments.count}", styiling_path(styiling.id) %></td>
                  </tr>
                 <% end %>
               <% end %>
              </table>
              </div>
              <% end %>
              <div align="right"><%= paginate @styilings %></div>   
          </div>
    </div>
  </div>
</div>
</div>