<div class="container"> 
  <div class="row">
　　<h3>ユーザーはこちらからログイン</h3>
　　　 <table>
　　　　 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <tr>
  　　   <div class="field">
           <th><%= f.label :メールアドレス%><br /></th>
           <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40" %></td>
        </div>
      </tr>
      
      <tr>
        <div class="field">
           <th><%= f.label :パスワード%><br /></th>
           <td><%= f.password_field :password, autocomplete: "current-password",size: "40"  %>
             <p><%=link_to "=> パスワードを忘れた方はこちら", new_user_password_path %></P>
           </td>
        </div>
      </tr>
     </table>
     <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-success" %>
      </div>
    <% end %>
      <div class="loginmove">
        <h4>登録がお済みでない方はこちらから<%= link_to "新規登録",new_user_registration_path %>してください</h4>
      </div>
    </div>
   </div>
</div>
