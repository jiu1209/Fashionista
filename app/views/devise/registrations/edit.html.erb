<div class="indextot">
  <div class="container"> 
    <div class="row">
    　<div class="col-xs-12"> 
        <h2>　　　　Edit Password</h2>
        <div align="center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
             <% if resource.errors.include?(:email) %>
               <p style="color: red;"><%= resource.errors.full_messages_for(:email).first %></p>
             <% end %>

             <% if resource.errors.include?(:current_password) %>
               <p style="color: red;"><%= resource.errors.full_messages_for(:current_password).first %></p>
             <% end %>

             <% if resource.errors.include?(:password) %>
               <p style="color: red;"><%= resource.errors.full_messages_for(:password).first %></p>
             <% end %>
             
             <% if resource.errors.include?(:password_confirmation) %>
               <p style="color: red;"><%= resource.errors.full_messages_for(:password_confirmation).first %></p>
             <% end %>

　　　　　  <table>
             <tr>
               <div class="field">
                 <th><%= f.label :メールアドレス  %><br /></th>
                 <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %></td>
               </div>
             </tr>
            
             <tr>
               <div class="field">
                 <th><%= f.label :旧パスワード %> <i></i><br /></th>
                 <td><%= f.password_field :current_password, autocomplete: "current-password", size: "50" %></td>
              </div>
            </tr>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
            <tr>
              <div class="field">
                 <th><%= f.label :新パスワード %>(6文字以上)<br /></th>
                 <td><%= f.password_field :password, autocomplete: "new-password", size: "50" %></td>
                 <td><% if @minimum_password_length %></td>
                 <% end %>
              </div>
            </tr>

            <tr>
　　　　　     <div class="field">
                <th><%= f.label :新パスワード %>(確認用)<br /></th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", size: "50" %></td>
              </div>
            </tr>
      
　　　　　　　<tr>
              <div class="actions">
                <td><%= f.submit "パスワードを更新する", data: {"turbolinks" => false},class:"btn btn-success" %></td>
              </div>
            </tr>
          </table>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
